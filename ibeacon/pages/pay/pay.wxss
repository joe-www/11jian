/* 手机验证 */

.login-wrap {
    width: 750rpx;
    height: 100%;
    background-color: #333333;
    opacity: 0.8;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 99;
}


/*手机号*/

.login-bd {
    width: 710rpx;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    /*align-items: center;*/
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}

.login-tel {
    display: flex;
    align-items: center;
    justify-content: space-between;
    background-color: #f2f2f2
}

.login-tel input {
    flex: 8;
    height: 88rpx;
    padding-left: 40rpx;
    line-height: 88rpx;
    font-size: 34rpx;
}

.login-tel icon {
    flex: 2;
    text-align: center;
}

.login-tel {
    margin-bottom: 20rpx;
}


/*验证码*/

.login-code-bd {
    display: flex;
    flex-direction: row;
}

.login-code-bd input {
    flex: 6;
    width: 470rpx;
    height: 88rpx;
    padding: 0 40rpx;
    line-height: 88rpx;
    background-color: #f2f2f2;
    font-size: 34rpx;
}

.code {
    flex: 4;
    width: 220rpx;
    height: 88rpx;
    line-height: 88rpx;
    margin-left: 20rpx;
    background-color: #e67d0a;
    color: #fefefe;
    font-size: 30rpx;
}

.codestyle {
    background-color: #e89841;
}


