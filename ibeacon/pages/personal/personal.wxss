/**index.wxss**/
.container{
  background-color: #eee;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  box-sizing: border-box;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  width:100%;
  height:200rpx;
  color:#000;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #000;
}
.chose_button {
    background: transparent;
    width: 750rpx;
    margin: 0;
    padding: 0;
    text-align: left;
    border-radius: 0;
    margin-top: 5px;
}

.chose_button::after {
    content: '';
    border: none;
}
.chose_btn_hover {
    background-color: #cccccc;
    opacity: 0.3;
}

.measurement_chose_wrap_start,
.measurement_chose_wrap_end {
    height: 80rpx;
    background-color: #ffffff;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 20rpx;
    position: relative;
    font-size: 30rpx;
}
.measurement_chose_wrap_start::after {
    content: '';
    display: block;
    position: absolute;
    bottom: 0;
    left: 20rpx;
    width: 730rpx;
    height: 2rpx;
    background-color: #efefef;
}


.measurement_chose_start_right image {
    width: 26rpx;
    height: 43rpx;
    padding-left: 20rpx;
}
.measurement_chose_start_left,
.measurement_chose_start_right {
    flex: 1;
}

.measurement_chose_start_right {
    display: flex;
    align-items: center;
    justify-content: flex-end
}

.measurement_chose_start_right image {
    width: 26rpx;
    height: 43rpx;
    padding-left: 20rpx;
}
